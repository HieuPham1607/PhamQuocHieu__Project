@model DevXuongMoc.Models.Banner

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admins/Views/Shared/_Admins.cshtml";
}

<h1>Create</h1>

<h4>Banner</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <!-- Thêm enctype để hỗ trợ tải file -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Trường Upload Image -->
            <div class="form-group">
                <label asp-for="Image" class="control-label">Upload Image</label>
                <input type="file" name="imageFile" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <!-- Trường Title -->
            <div class="form-group">
                <label asp-for="Title" class="control-label">Title</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <!-- Trường SubTitle -->
            <div class="form-group">
                <label asp-for="SubTitle" class="control-label">SubTitle</label>
                <input asp-for="SubTitle" class="form-control" />
                <span asp-validation-for="SubTitle" class="text-danger"></span>
            </div>

            <!-- Trường Urls -->
            <div class="form-group">
                <label asp-for="Urls" class="control-label">Urls</label>
                <input asp-for="Urls" class="form-control" />
                <span asp-validation-for="Urls" class="text-danger"></span>
            </div>

            <!-- Trường Orders -->
            <div class="form-group">
                <label asp-for="Orders" class="control-label">Orders</label>
                <input asp-for="Orders" class="form-control" />
                <span asp-validation-for="Orders" class="text-danger"></span>
            </div>

            <!-- Trường Type -->
            <div class="form-group">
                <label asp-for="Type" class="control-label">Type</label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <!-- Trường CreatedDate -->
            <div class="form-group">
                <label asp-for="CreatedDate" class="control-label">Created Date</label>
                <input asp-for="CreatedDate" class="form-control" />
                <span asp-validation-for="CreatedDate" class="text-danger"></span>
            </div>

            <!-- Trường UpdatedDate -->
            <div class="form-group">
                <label asp-for="UpdatedDate" class="control-label">Updated Date</label>
                <input asp-for="UpdatedDate" class="form-control" />
                <span asp-validation-for="UpdatedDate" class="text-danger"></span>
            </div>

            <!-- Trường AdminCreated -->
            <div class="form-group">
                <label asp-for="AdminCreated" class="control-label">Admin Created</label>
                <input asp-for="AdminCreated" class="form-control" />
                <span asp-validation-for="AdminCreated" class="text-danger"></span>
            </div>

            <!-- Trường AdminUpdated -->
            <div class="form-group">
                <label asp-for="AdminUpdated" class="control-label">Admin Updated</label>
                <input asp-for="AdminUpdated" class="form-control" />
                <span asp-validation-for="AdminUpdated" class="text-danger"></span>
            </div>

            <!-- Trường Notes -->
            <div class="form-group">
                <label asp-for="Notes" class="control-label">Notes</label>
                <input asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <!-- Trường Status -->
            <div class="form-group">
                <label asp-for="Status" class="control-label">Status</label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <!-- Trường Isdelete -->
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Isdelete" /> @Html.DisplayNameFor(model => model.Isdelete)
                </label>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
