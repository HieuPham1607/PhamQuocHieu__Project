@model DevXuongMoc.Models.Contact
@{
    ViewData["Title"] = "Liên hệ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .contact-container {
        max-width: 800px;
        margin: auto;
        padding: 20px;
        background: #fff;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .contact-title {
        text-align: center;
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .btn-submit {
        display: block;
        width: 100%;
        padding: 10px;
        background-color: #bd945f;
        color: white;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
    }

        .btn-submit:hover {
            background-color: #a67c52;
        }
</style>

<div class="contact-container">
    <h2 class="contact-title">Liên Hệ Với Chúng Tôi</h2>
    <form asp-action="Index" method="post">
        @Html.AntiForgeryToken()

        <div class="form-group">
            <input type="text" name="username" class="form-control" placeholder="Họ tên" required value="@(Model?.Title ?? "")">
        </div>
        <div class="form-group">
            <input type="email" name="email" class="form-control" placeholder="Email" required value="@(Model?.Email ?? "")">
        </div>
        <div class="form-group">
            <input type="text" name="phone" class="form-control" placeholder="Số điện thoại" required value="@(Model?.Phone ?? "")">
        </div>
        <div class="form-group">
            <textarea name="content" class="form-control" placeholder="Nội dung" rows="4" required> @(Model?.Content ?? "") </textarea>
        </div>
        <button type="submit" class="btn-submit">Gửi</button>
    </form>
</div>
